<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ktw_database_menu.factory.class">kevintweber\KtwDatabaseMenuBundle\Menu\DatabaseMenuFactory</parameter>
        <parameter key="ktw_database_menu.menu_provider.class">kevintweber\KtwDatabaseMenuBundle\Provider\DatabaseMenuProvider</parameter>
    </parameters>

    <services>
        <service id="ktw_database_menu.factory" class="%ktw_database_menu.factory.class%">
            <argument type="service" id="router" />
            <argument type="service" id="service_container" />
        </service>

        <service id="ktw_database_menu.menu_provider" class="%ktw_database_menu.menu_provider.class%" public="false">
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
